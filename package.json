{
  "name": "footballapp",
  "version": "1.0.0",
  "description": "This a boilerplate for Express and React Applications that provides both developer and production builds.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server.js",
    "server": "nodemon server.js",
    "debug": "node --inspect index.js",
    "src-install": "yarn --cwd ./frontend/ install",
    "frontend": "yarn --cwd ./frontend/ start",
    "dev": "concurrently \"yarn run server\" \"yarn run frontend\" \"webpack --config config/webpack.dev.js\"",
    "build": "webpack --config config/webpack.prod.js"
